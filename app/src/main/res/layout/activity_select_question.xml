<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.bubblegray.eatordie.SelectQuestion"
    android:orientation="vertical"
    android:background="#F5EFE1"
    android:weightSum="1">

    <ImageView
        android:layout_width="319dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/quick_answer" />

    <ImageView
        android:layout_width="155dp"
        android:layout_height="115dp"
        android:id="@+id/imageView4"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/two_choose_one" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="0.5dp"
        android:padding="0.5dp">

        <TextView
            android:layout_width="198dp"
            android:layout_height="140dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/choice1"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/empty_btn"
            android:gravity="center_vertical|center_horizontal"
            android:layout_weight="1"
            android:onClick="decided" />

        <TextView
            android:layout_width="198dp"
            android:layout_height="140dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/choice2"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/empty_btn"
            android:gravity="center_vertical|center_horizontal"
            android:layout_weight="1"
            android:singleLine="true"
            android:onClick="decided" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:id="@+id/loading_spinner"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.32"
            android:indeterminate="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:background="#00000000"
            android:layout_alignLeft="@id/loading_spinner"
            android:layout_alignTop="@id/loading_spinner"
            android:id="@+id/textView11"
            android:layout_height="130dp"
            android:layout_alignRight="@+id/loading_spinner"
            android:layout_alignEnd="@+id/loading_spinner"
            android:layout_width="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="40dp" />
    </RelativeLayout>

</LinearLayout>

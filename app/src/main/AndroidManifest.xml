<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bubblegray.eatordie" >

    <uses-permission android:name="android.permission.INTERNET" />
    <!-- GPS -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!-- WIFI權限 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ResultList"
            android:label="@string/title_activity_result_list" >
        </activity>
        <activity
            android:name=".SelectQuestion"
            android:label="@string/title_activity_select_question" >
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Die"
            android:label="@string/title_activity_die" >
        </activity>
        <activity
            android:name=".GoogleMap"
            android:label="@string/title_activity_google_map" >
        </activity>
    </application>

</manifest>
